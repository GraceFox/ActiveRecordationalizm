<div class="sign_up">
  <h2>Make an account</h2>

  <% if @error %>
    <div class="error">
      <h3>Error</h3>
      <p><%=@error%></p>
    </div>
  <%end%>

  <form action='/sign_up/' method='post'>
    <label for="name">Contributor Name</label>
    <input type="text" id="name" name="sign_up[name]">

    <label for="email">Email</label>
    <input type="text" id="email" name="sign_up[email]">

    <label for="password">Password</label>
    <input type="password" id="password" name="sign_up[password]">

    <input type='submit' id='submit' value= "Join!">
  </form>

</div>
